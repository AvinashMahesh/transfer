# Database (SQLite for development - in-memory or file-based)
# Use in-memory database (data lost on restart)
DATABASE_URL=sqlite:///./deloitte_initiatives.db
# Or use in-memory only: sqlite:///:memory:

# Authentication
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Azure AD B2C
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret
AZURE_AD_AUTHORITY=https://login.microsoftonline.com/your-tenant-id

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=optional-api-key

# Application
APP_NAME=Deloitte Initiative Discovery Platform
APP_VERSION=1.0.0
DEBUG=True
